<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/bonusEffectCardBackground"
        android:padding="16dp">

        <TextView
            android:id="@+id/kodePertanyaan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="taskName"
            android:textColor="@color/effectTitleColor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/kategori"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/isiPertanyaan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="taskDescription"
            android:textColor="@color/effectDescriptionColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/kategori"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kodePertanyaan" />

        <TextView
            android:id="@+id/kategori"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="icon"
            android:textColor="@color/accent"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>