<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".fragments.ImageFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/imageSectionHeader"
        style="@style/Theme.PhotoEditor.Header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/image_section_header"
        app:titleMarginStart="32dp" />

    <ImageView
        android:id="@+id/currentImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSectionHeader" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/takePictureButton"
        style="@style/Theme.PhotoEditor.Button"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_border"
        android:text="@string/take_picture_button"
        app:icon="@drawable/ic_photo"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/choosePictureButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentImage" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/choosePictureButton"
        style="@style/Theme.PhotoEditor.Button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_border"
        android:text="@string/choose_picture_button"
        app:icon="@drawable/ic_folder"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/takePictureButton"
        app:layout_constraintTop_toBottomOf="@+id/currentImage" />

</androidx.constraintlayout.widget.ConstraintLayout>