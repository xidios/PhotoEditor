<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegmentationActivity">

    <ImageView
        android:id="@+id/imageViewSegmentation"
        style="@style/imagePreviewOnEffect"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSegmentationApply"
        style="@style/Theme.PhotoEditor.Button.Accent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/apply_button"
        app:backgroundTint="@color/buttonBackground"
        app:icon="@drawable/ic_check"
        app:iconTint="@color/accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSegmentation" />
</androidx.constraintlayout.widget.ConstraintLayout>