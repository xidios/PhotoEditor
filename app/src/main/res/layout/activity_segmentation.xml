<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnsharpMaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/SegmentationToolbar"
        style="@style/Theme.PhotoEditor.Header.Effect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_button"
        app:title="@string/Segmentation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SegmentationToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/SegmentationImage"
                style="@style/imagePreviewOnEffect"
                android:layout_width="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:contentDescription="@string/rotation_image_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/SegmentationButton"
                style="@style/Theme.PhotoEditor.Button.Accent"
                android:layout_marginTop="16dp"
                android:text="@string/apply_button"
                app:backgroundTint="@color/buttonBackground"
                app:icon="@drawable/ic_check"
                app:iconTint="@color/accent"
                app:layout_constraintEnd_toEndOf="@+id/SegmentationImage"
                app:layout_constraintTop_toBottomOf="@+id/SegmentationImage"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/SaveSegmentationButton"
                style="@style/Theme.PhotoEditor.Button"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:backgroundTint="@color/buttonBackground"
                android:text="@string/save_picture_button"
                app:icon="@drawable/ic_folder"
                app:iconTint="@color/black"

                app:layout_constraintEnd_toStartOf="@id/SegmentationButton"
                app:layout_constraintTop_toBottomOf="@+id/SegmentationImage"/> />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>